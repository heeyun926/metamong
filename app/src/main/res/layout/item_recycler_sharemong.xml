<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_sharemong"
    android:layout_width="294dp"
    android:layout_height="241dp"
    android:layout_marginEnd="24dp">

    <ImageView
        android:id="@+id/main_sharemong_BG"
        android:layout_width="294dp"
        android:layout_height="241dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_shatemong_meet" />


    <ImageView
        android:id="@+id/main_sharemong_text_bg"
        android:layout_width="294dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_sharemong_bg" />

    <ImageView
        android:id="@+id/main_sharemong_character"
        android:layout_width="350dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toTopOf="@+id/main_sharemong_text_bg"
        app:layout_constraintEnd_toEndOf="@+id/main_sharemong_BG"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/meet_i_b" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sharemongCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_sharemong_text_bg">

        <TextView
            android:id="@+id/sharemongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="진로체험페어 "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sharemongScript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="구름들에서 진행한 프로젝트 체험,\n진로체험을 VR,AR 체험하실 수 있어요!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sharemongTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>